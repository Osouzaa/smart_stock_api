generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  nome       String
  email      String   @unique
  senha_hash String
  role       UserRole @default(ESTOQUISTA)
  created_at DateTime @default(now())

  @@map("users")
}

model Products {
  id             String    @id @default(uuid())
  nome           String
  categoria      String
  codigo_barras  String
  unidade        String
  fornecedor     String
  validade       DateTime?
  estoque_minimo Int
  created_At     DateTime  @default(now())
}

enum UserRole {
  ADMIN
  ESTOQUISTA
  FINANCEIRO
}
